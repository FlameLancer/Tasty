@model ChangeUserRolesViewModel
@{
    ViewData["Title"] = "Edycja użytkownika";
}

<div class="my-border backgroud-color-secondary my-box-shadow" style="color: inherit; text-decoration: none; display: flex; flex-direction: column; box-shadow: rgb(0, 0, 0, 0.2) 0px 0px 4px; padding: 1.5rem; margin: 10px 0 0">
    <h3>Sklepy użytkownika</h3>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="ChangeUserRoles" method="post">
        <input hidden asp-for="Id" />
        <div class="mb-3">
            <label asp-for="SelectedRoles" class="form-label">Kategorie</label>
            <select class="form-select" asp-for="SelectedRoles" asp-items="Model.Roles"></select>
        </div>
        <div class="text-center">
            <input class="btn btn-success" type="submit" value="Zapisz sklep" />
        </div>
    </form>
</div>
