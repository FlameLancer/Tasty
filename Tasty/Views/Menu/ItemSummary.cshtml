@model ItemSummaryViewModel

<div class="shoplist-item my-border backgroud-color-secondary my-box-shadow" style="position: relative; display: flex; flex-direction: column; box-shadow: rgb(0, 0, 0, 0.2) 0px 0px 4px; padding: 1.5rem; margin: 10px 0 ">
    <h5>@Model.Item.Name </h5>
    <small class="text-muted">@Model.Item.Description</small>
    <div style="font: 500 18px arial, verdena; margin: 8px 0 0 0">@($"{Model.Item.Price:C2}")</div>
    @if (ViewBag.IsOpen)
    {
        <form id="@Model.Item.ItemId" asp-action="AddToCart"
              asp-controller="Cart" method="post">
            <input type="hidden" name="itemId" value="@Model.Item.ItemId" />
            <input type="hidden" name="shopId" value="@Model.ShopId" />
            <input type="hidden" name="returnUrl"
                   value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span style="position: absolute; right: 0; top: 0; border-left: 1px solid hsl(140 70% 65%); border-bottom: 1px solid hsl(140 70% 65%); ">
                <button class="p-1" type="submit" style="height: 2rem; width: 2rem; background-color: Transparent; background-repeat: no-repeat; border: none; cursor: pointer; overflow: hidden; outline: none;">
                    <i class="fa fa-plus"></i>
                </button>
            </span>
        </form>
    }
</div>